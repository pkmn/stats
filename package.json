{
  "private": true,
  "repository": "github:pkmn/stats",
  "license": "MIT",
  "dependencies": {
    "@pkmn/logs": "file:logs",
    "minimist": "^1.2.7",
    "source-map-support": "^0.5.21"
  },
  "optionalDependencies": {
    "@pkmn/anon": "file:anon",
    "@pkmn/data": "^0.6.1",
    "@pkmn/dex": "^0.6.1",
    "@pkmn/engine": "file:../egine",
    "@pkmn/stats": "file:stats"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@pkmn/eslint-config": "^2.11.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "jest": "^29.2.2",
    "subpkg": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "subPackages": ["anon", "logs", "stats"],
  "scripts": {
    "lint": "eslint --cache workflows --ext ts && subpkg run lint",
    "fix": "eslint --fix workflows --ext ts && subpkg run fix",
    "compile": "tsc -p . && subpkg run compile",
    "test": "subpkg run test",
    "pretest": "tsc -p .",
    "posttest": "eslint --cache workflows --ext ts",
    "postinstall": "subpkg install"
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "overrides": [{
      "files": ["workflows/**/*.ts"],
      "rules": {
        "@typescript-eslint/no-floating-promises": ["error", {"ignoreVoid": true}]
      }
    }]
  }
}
